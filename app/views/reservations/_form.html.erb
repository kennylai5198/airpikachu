<div class="panel panel-default">

  <div class="panel-heading">
    <span><i class="fas fa-bolt" style="color: #ffb400"></i> $<%= @room.price %></span>
    <span class="pull-right">Per Night</span>
  </div>

  <div class="panel-body">
    <%= form_for([@room, @room.reservations.new]) do |f| %>
      <div>
        <div class="col-md-6">
          <label>Check In</label>
          <%= f.text_field :start_date, readonly: true, placeholder: "Start Date", class: "form-control datepicker" %>
        </div>
        <div class="col-md-6">
          <label>Check Out</label>
          <%= f.text_field :end_date, readonly: true, placeholder: "End Date", class: "form-control datepicker", disabled: true %><br/>
        </div>
      </div>

      <div id="preview" style="display: none">
        <div class="col-md-12">
          <table class="reservation-table">
            <tbody>
              <tr>
                <td>Price</td>
                <td class="text-right">$<%= @room.price %></td>
              </tr>
              <tr>
                <td>Night(s)</td>
                <td class="text-right">x <span id="reservation_days"></span></td>
              </tr>
              <tr>
                <td class="total">Total</td>
                <td class="text-right">$<span id="reservation_total"></span></td>
              </tr>
            </tbody>
          </table><br/>
        </div>
      </div>

      <div class="col-md-12">
        <%= f.submit "Book Now", class: "btn btn-normal btn-block" %>
      </div>
    <% end %>
  </div>

</div>


<script>
  $(function() {
    $('#reservation_start_date').datepicker({
      dateFormat: 'dd-mm-yy'
    });
    $('#reservation_end_date').datepicker({
      dateFormat: 'dd-mm-yy'
    });
  });
</script>
